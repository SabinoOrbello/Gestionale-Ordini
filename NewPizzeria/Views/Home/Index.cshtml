<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Mostra il video
        document.querySelector("iframe").style.display = "block";

        // Mostra le immagini con un'animazione
        document.querySelectorAll(".img-fluid").forEach(function (img) {
            img.style.opacity = "0"; // Imposta l'opacità a 0 per iniziare
            img.style.transition = "opacity 1s ease-in-out"; // Aggiungi una transizione per un effetto graduale
            setTimeout(function () {
                img.style.opacity = "1"; // Imposta l'opacità a 1 dopo un ritardo di 1 secondo
            }, 1000);
        });
    });

</script>

